{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12 mb-4">
            <h1>Resume</h1>
        </div>

        {% for resume in representation %}
            <div class="col-4 mb-3">
                <div class="card">
                    <div class="card-header">{{ resume.title }}</div>
                    <img class="card-img-top" src="{{ asset(resume.image) }}" alt="{{ resume.title }}">
                    <div class="card-body d-flex justify-content-between flex-column">
                        <small class="text-muted">Published At {{ resume.publishedAt|date("d/m/Y") }} from {{ resume.pseudo }}</small>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="{{ path("resume_read", { id: resume.id }) }}">Reade more</a>
                        {% if is_granted('edit', resume) %}
                            <a href="{{ path("blog_update", { id: resume.id }) }}">Update</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
